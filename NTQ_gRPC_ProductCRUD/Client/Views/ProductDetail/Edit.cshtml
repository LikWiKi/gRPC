@using Service
@model Service.ProductDetail

<h1>Edit</h1>

<h4>Product Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Color</label>
                <input asp-for="Color" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Starting Date</label>
                <input asp-for="StartingDate" type="date" name="dobStart" value="dobCreate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Cloasing Date</label>
                <input asp-for="ClosingDate" type="date" name="dobClose" value="dobUpdate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Made by</label>
                <input asp-for="MadeBy" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Category Id</label>
                <select name="productId">
                    @foreach (var item in (IEnumerable<Product>)ViewData["listOfProduct"])
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Create Date</label>
                <input asp-for="CreatedDate" type="date" name="dobCreate" value="dobCreate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Update Date</label>
                <input asp-for="UpdatedDate" type="date" name="dobUpdate" value="dobUpdate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }