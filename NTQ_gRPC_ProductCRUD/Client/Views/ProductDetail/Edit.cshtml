@using Service
@model Service.ProductDetail

<h1>Edit</h1>

<h4>Product Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Color</label>
                <input asp-for="Color" class="form-control" />
            </div>
            @*<div class="form-group">
                <label class="control-label">Starting Date</label>
                <input asp-for="StartingDate" type="date" name="dobStart" value="dobCreate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Cloasing Date</label>
                <input asp-for="ClosingDate" type="date" name="dobClose" value="dobUpdate" class="form-control" />
            </div>*@
            @{
                string createdYear = @Model.StartingDate.ToDateTime().Year.ToString();
                string createdMonth = @Model.StartingDate.ToDateTime().Month.ToString();
                if (@Model.StartingDate.ToDateTime().Month <= 9)
                {
                    createdMonth = "0" + createdMonth;
                }
                string createdDay = @Model.StartingDate.ToDateTime().Day.ToString();
                if (@Model.StartingDate.ToDateTime().Day <= 9)
                {
                    createdDay = "0" + createdDay;
                }
                string val = createdYear + "-" + createdMonth + "-" + createdDay;

                <div class="form-group">
                    <label class="control-label">CreatedDate</label>
                    <input asp-for="StartingDate" type="date" name="dobStart" class="form-control" value="@val" />
                </div>

                string updatedYear = @Model.ClosingDate.ToDateTime().Year.ToString();
                string updatedMonth = @Model.ClosingDate.ToDateTime().Month.ToString();
                if (@Model.ClosingDate.ToDateTime().Month <= 9)
                {
                    updatedMonth = "0" + updatedMonth;
                }
                string updatedDay = @Model.ClosingDate.ToDateTime().Day.ToString();
                if (@Model.ClosingDate.ToDateTime().Day <= 9)
                {
                    updatedDay = "0" + updatedDay;
                }
                string updatedVal = updatedYear + "-" + updatedMonth + "-" + updatedDay;
                <div class="form-group">
                    <label class="control-label">UpdatedDate</label>
                    <input asp-for="ClosingDate" type="date" name="dobClose" class="form-control" value="@updatedVal" />
                </div>
            }
            <div class="form-group">
                <label class="control-label">Made by</label>
                <input asp-for="MadeBy" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Category Id</label>
                <select name="productId">
                    @foreach (var item in (IEnumerable<Product>)ViewData["listOfProduct"])
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            @{
                string createdYears = @Model.CreatedDate.ToDateTime().Year.ToString();
                string createdMonths = @Model.CreatedDate.ToDateTime().Month.ToString();
                if (@Model.CreatedDate.ToDateTime().Month <= 9)
                {
                    createdMonths = "0" + createdMonths;
                }
                string createdDays = @Model.CreatedDate.ToDateTime().Day.ToString();
                if (@Model.CreatedDate.ToDateTime().Day <= 9)
                {
                    createdDays = "0" + createdDays;
                }
                string value = createdYears + "-" + createdMonths + "-" + createdDays;

                <div class="form-group">
                    <label class="control-label">CreatedDate</label>
                    <input type="date" asp-for="CreatedDate" name="dobCreate" class="form-control" value="@value" />
                </div>

                string updatedYears = @Model.UpdatedDate.ToDateTime().Year.ToString();
                string updatedMonths = @Model.UpdatedDate.ToDateTime().Month.ToString();
                if (@Model.UpdatedDate.ToDateTime().Month <= 9)
                {
                    updatedMonths = "0" + updatedMonths;
                }
                string updatedDays = @Model.UpdatedDate.ToDateTime().Day.ToString();
                if (@Model.UpdatedDate.ToDateTime().Day <= 9)
                {
                    updatedDays = "0" + updatedDays;
                }
                string updatedVals = updatedYears + "-" + updatedMonths + "-" + updatedDays;
                <div class="form-group">
                    <label class="control-label">UpdatedDate</label>
                    <input type="date" asp-for="UpdatedDate" name="dobUpdate" class="form-control" value="@updatedVals" />
                </div>
            }
            @*<div class="form-group">
                <label class="control-label">Create Date</label>
                <input asp-for="CreatedDate" type="date" name="dobCreate" value="dobCreate" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Update Date</label>
                <input asp-for="UpdatedDate" type="date" name="dobUpdate" value="dobUpdate" class="form-control" />
            </div>*@
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

